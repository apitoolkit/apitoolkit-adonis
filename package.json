{
  "name": "apitoolkit-adonis",
  "version": "2.0.0",
  "description": "APIToolkit SDK for adonisjs",
  "main": "build/providers/APIToolkitProvider.js",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "lint": "eslint . --ext=.ts",
    "test": "node -r @adonisjs/require-ts/build/register bin/test.ts",
    "clean": "del-cli build",
    "compile": "npm run clean && tsc && npm run copy:files",
    "copy:files": "copyfiles \"templates/**/*.txt\" build && npm run copy:instructions_md",
    "copy:instructions_md": "copyfiles \"instructions.md\" build",
    "build": "npm run compile",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apitoolkit/apitoolkit-adonis.git"
  },
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@adonisjs/core": "^5.1.0"
  },
  "devDependencies": {
    "@adonisjs/core": "^5.1.0",
    "@adonisjs/mrm-preset": "^5.0.3",
    "@adonisjs/require-ts": "^2.0.13",
    "@types/jsonpath": "^0.2.4",
    "@types/node": "^20.10.4",
    "@types/sync-fetch": "^0.4.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "del-cli": "^5.1.0",
    "eslint": "^8.55.0",
    "mrm": "^4.1.22",
    "typescript": "^5.3.3"
  },
  "mrmConfig": {
    "core": false,
    "license": "MIT",
    "services": [],
    "minNodeVersion": "16.13.1",
    "probotApps": []
  },
  "files": [
    "build/adonis-typings",
    "build/providers",
    "build/src",
    "build/templates",
    "build/instructions.md"
  ],
  "adonisjs": {
    "instructionsMd": "./build/instructions.md",
    "types": "apitoolkit-adonis",
    "providers": [
      "apitoolkit-adonis"
    ],
    "templates": {
      "config": [
        "apitoolkit.txt"
      ]
    }
  },
  "dependencies": {
    "@google-cloud/pubsub": "^4.0.7",
    "@japa/runner": "^3.1.0",
    "@poppinss/dev-utils": "^2.0.3",
    "async_hooks": "^1.0.0",
    "axios": "^1.6.2",
    "copyfiles": "^2.4.1",
    "jsonpath": "^1.1.1",
    "sync-fetch": "^0.5.2",
    "uuid": "^9.0.1"
  }
}
